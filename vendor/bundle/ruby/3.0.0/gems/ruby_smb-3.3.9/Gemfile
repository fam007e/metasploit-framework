source 'https://rubygems.org'
gemspec

group :development do
  # for development and testing purposes
  gem 'pry-byebug'
  gem 'pry-rescue'
end

group :test do
  # simplecov test formatter and uploader for Coveralls.io
  gem "coveralls", '~>0.8.23', :require => false
  # Testing
  gem 'rspec'
  # Coverage reports
  gem 'simplecov', require: false
end
